@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Home Page"];
}

<div class="grid-container">
    <div class="grid-row">
        <div class="grid-col-12">
            <h3>
                <span class="fa-stack fa-2x" style="font-size: 1em;">
                    <i class="fas fa-circle fa-stack-2x" style="color: #02bf02;"></i>
                    <i class="fas fa-info fa-stack-1x fa-inverse"></i>
                </span>
                @Localizer["About"]
            </h3>
            <ul>
                <li>@Localizer["The FEDPAY archiver application provides the ability to research purchase orders and related records for Purchase Orders no longer Active in FEDPAY."]</li>
            </ul>
            <h3>
                <span class="fa-stack fa-2x" style="font-size: 1em;">
                    <i class="fas fa-circle fa-stack-2x" style="color: #02bfe7;"></i>
                    <i class="fas fa-bullhorn fa-stack-1x fa-inverse"></i>
                </span>
                @Localizer["Messages"]
            </h3>
            <ul>
                <li>@Localizer["No messages at this time."]</li>
            </ul>
        </div>
    </div>
</div>