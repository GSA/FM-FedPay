@model IEnumerable<FedPayArchiver.EFModels.ArchHpoSummary>

@{
    Layout = null;
}

@{
    ViewData["Title"] = "Purhcase Orders Meeting Criteria entered:";
}
<h2>Purchase Order Results</h2>
<br />
<bold>
    <font color=#00b300 size=+2>
        Search Criteria   <br />
        @ViewBag.SearchCriteria
    </font><br>
    <font color=#ff3333 size=+2>
        @ViewBag.SearchRes
    </font><br>
</bold>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PO Summary</title>
    <style>
        .grid-container-PO {
            display: grid;
            grid-template-columns: repeat(8,1fr);
            grid-template-rows: repeat(9, minmax(5px,auto));
            /* grid-auto-rows: minmax(30, auto);*/
            grid-gap: 1px;
            background-color: #beb5b5;
            padding: 1px;
        }

        .grid-line1 {
            display: grid;
            grid-template-columns: repeat(3,1fr);
            grid-column: 1/9;
            grid-row: 1/1;
            /*grid-gap: 1px;*/
            background-color: brown;
            /*padding: 1px;*/
        }

        .grid-line2 {
            display: grid;
            grid-template-columns: repeat(2,1fr);
            grid-column: 1/9;
            grid-row: 3/3;
            /*grid-gap: 1px;*/
            background-color: cornflowerblue;
            /*padding: 1px;*/
        }

        .grid-line9 {
            display: grid;
            grid-template-columns: repeat(3,1fr);
            grid-column: 1/9;
            grid-row: 9/9;
            /*grid-gap: 1px;*/
            background-color: cadetblue;
            /*padding: 1px;*/
        }
    </style>

</head>
<body>
    @*<meta name="viewport" content="width=device-width" />*@

    @*<table class="table" style="width:50%" border="1">*@
    @*@Html.DisplayNameFor(model => model.Hpos)*@
    @foreach (var item in Model)
    {
        <div class="grid-container-PO">
            <div class="grid-line1">
                <div>FEDPAY PO: </div>
                <div>FAS PO: </div>
                <div>Date of Order:</div>
                <div>@Html.DisplayFor(modelItem => item.HposPoNo)</div>
                <div>@Html.DisplayFor(modelItem => item.HposFssPoNo)</div>
                <div>@Html.DisplayFor(modelItem => item.HposDateOfOrder)</div>
            </div>
            @*Contract#  add data item

                Status      add data item
                Date Closed  add data item*@



            <div class="grid-line2">
                <div>  Vendor#  </div>
                <div>  DUNS#    </div>
                <div>@Html.DisplayFor(modelItem => item.HposVendorNo)</div>
                <div>@Html.DisplayFor(modelItem => item.HposDunsNo)</div>
            </div>
        </div>



        @*Money Only
               Amend#
            Amend Date
            <br />
            Signal Code
               Exp / Dom
               SDF
            DSDF
               Fund
            TD
               FOB
            <br />
            Discnt Terms
            BOAC
               CONS
            <br />
            Contact
               Phone
            <br />*@




        @*@Html.DisplayFor(modelItem => item.HposDateOfOrder)*@

        <div class="grid-line9">
            <div>
                <a asp-action="POL"
                   asp-route-poid="@item.HposPoId"
                   asp-route-OrderDate="@item.HposDateOfOrder"
                   asp-route-SrchCriteria="@ViewBag.SearchCriteria"
                   asp-route-fpo="@ViewBag.FPno"
                   asp-route-faspo="@ViewBag.FASno">PO Line Items</a>
            </div>
            <div>
                <a asp-action="POA"
                   asp-route-poid="@item.HposPoId"
                   asp-route-OrderDate="@item.HposDateOfOrder"
                   asp-route-SrchCriteria="@ViewBag.SearchCriteria"
                   asp-route-fpo="@ViewBag.FPno"
                   asp-route-faspo="@ViewBag.FASno">PO Line Item Activity</a>
            </div>
            <div>
                <a asp-action="PON"
                   asp-route-poid="@item.HposPoId"
                   asp-route-OrderDate="@item.HposDateOfOrder"
                   asp-route-SrchCriteria="@ViewBag.SearchCriteria"
                   asp-route-fpo="@ViewBag.FPno"
                   asp-route-faspo="@ViewBag.FASno">PO Note</a>
            </div>

        </div>
    }
</body>
</html>

@Html.ActionLink("NEW SEARCH", "PARAM", new { /* go back to get new search criteria */ })
