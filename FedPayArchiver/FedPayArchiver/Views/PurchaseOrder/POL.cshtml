@model IEnumerable<FedPayArchiver.EFModels.ArchHpoLineItem>

@{
    Layout = null;
}

@{
    ViewData["Title"] = "PO Line Items";
}
<h2>Purchase Order Results</h2>
<br />
<right>
    <bold>
        <font color=#00b300 size=+2>
            Search Criteria   <br />
            @ViewBag.SearchCriteria
        </font><br>
        <font color=#ff3333 size=+2>
            @ViewBag.SearchRes
        </font><br>
    </bold>
    <table class="table"style="width:50%"border="1">
        <thead>
            <tr>
                <th>
                    @*@Html.DisplayNameFor(model => model.Hpos)*@
                      FEDPAY PO# 
                </th>
                <th>
                     FAS PO# 
                </th>
                <th>
                     Date of Order 
                </th>
                <th>
                     SEQ#
                </th>
                <th>
                    REQ#
                </th>
                <th>
                    STOCK#
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HpolPoNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HpolFssPoNo)
                </td>
                <td>
                    @ViewBag.OrdDt
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HpolSeqNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HpolReqNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HpolStockNo)
                </td>

            </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("NEW SEARCH", "PARAM", new { /* go back to get new search criteria */ })
