@model IEnumerable<FedPayArchiver.EFModels.ArchHpoNote>

@{
    Layout = null;
}

@{
    ViewData["Title"] = "PO Notes";
}
<h2>Purchase Order Notes</h2>
<br />
<right>
    <bold>
        <font color=#00b300 size=+2>
            Search Criteria   <br />
            @ViewBag.SearchCriteria
        </font><br>
        <font color=#ff3333 size=+2>
            @ViewBag.SearchRes
        </font><br>
    </bold>
    <table class="table" style="width:50%" border="1">
        <thead>
            <tr>
                <th>
                    FEDPAY PO#
                </th>
                <th>
                    FAS PO#
                </th>
                <th>
                    Date of Order
                </th>
                <th>
                    LINE SEQ#
                </th>
                <th>
                    Note
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HponPoNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HponFssPoNo)
                    </td>
                    <td>
                        @ViewBag.OrdDt
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HponSeqNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HponNoteAddendums)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-action="Index"
           asp-route-pos="@ViewBag.FPno"
           asp-route-faspo="@ViewBag.FASno">PO List</a>  &nbsp;

        <a asp-action="POL"
           asp-route-poid="@ViewBag.PoId"
           asp-route-OrderDate="@ViewBag.OrdDt"
           asp-route-SrchCriteria="@ViewBag.SearchCriteria"
           asp-route-fpo="@ViewBag.FPno"
           asp-route-faspo="@ViewBag.FASno">PO Line</a>  &nbsp;

        <a asp-action="POA"
           asp-route-poid="@ViewBag.PoId"
           asp-route-OrderDate="@ViewBag.OrdDt"
           asp-route-SrchCriteria="@ViewBag.SearchCriteria"
           asp-route-fpo="@ViewBag.FPno"
           asp-route-faspo="@ViewBag.FASno">PO Activity</a>  &nbsp;

    </div>
    @Html.ActionLink("NEW SEARCH", "PARAM", new { /* go back to get new search criteria */ })
